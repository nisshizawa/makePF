<div class="h3 m-5 col-3 bg-info text-black text-center">
  <%= @user.last_name %><%= @user.first_name %>さんの会員詳細
</div>

<table class="table table-borderless">
    <thead>
        <tr>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
        </tr>
        <tr>
            <th>氏名</th>
            <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
            <th>フリガナ</th>
            <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= @user.postal_code %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= @user.address %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= @user.telephone_number %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
        </tr>
        <tr>
            <th>会員ステータス</th>
            <td>
                <% if @user.is_active %> 
                    <p>有効</p>
                <% else %> 
                    <p>退会</p>
                <% end %> 
            </td>
        </tr>
    </tbody>
</table>
    
        <%= link_to edit_admin_user_path(@user) do %>
            <button type="button" class="btn btn-success">編集する</button>
        <% end %>
        
