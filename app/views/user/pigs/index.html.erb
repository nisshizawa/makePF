<div class="m-2 h3 border-bottom">
  <div class="text-center">豚の一覧表</div>
</div>
<div class="row">
    <div class="col-md-10">
        <table class="table table-hover mt-5">
            <thead class="table-light">
                <tr>
                    <th></th>
                    <th>個体名</th>
                    <th>個体番号</th>
                    <th>入荷・生誕日</th>
                    <th colspan="2"></th>
                    <th>
                        <%= link_to new_pig_path(current_user) do %>
                            <div class="btn btn-sm btn-info rounded-pill">豚の新規登録</div>
                        <% end %>                          
                    </th>
                </tr>
            </thead>
            <tbody>
            <% @pigs.each do |pig| %>
                <tr>
                    <td></td>
                    <td><%= pig.name %></td>
                    <td><%= pig.number %></td>
                    <td><%= pig.arrival %></td>
                    <td>
                        <%= link_to pig_path(pig.id) do %>
                            <div class="btn btn-sm btn-warning">詳細へ</div>
                        <% end %>                      
                    </td>
                    <td>
                        <%= link_to edit_pig_path(pig.id) do %>
                            <div class="btn btn-sm btn-success">編集する</div>
                        <% end %>    
                    </td>
                    <td>
                        <%= link_to pig_path(pig.id), method: :delete do %>
                            <div data-confirm="本当に消しますか？" class="btn btn-sm btn-danger">削除する</div>
                        <% end %>
                    </td>
                </tr>
            <% end %>    
            </tbody>
        </table>
    </div>
</div>
