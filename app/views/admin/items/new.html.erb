<div class="h3 m-5 col-3 bg-info text-black text-center">
  商品新規登録
</div>
<div class="container">
    <div class="row text-start">
        <%= form_with model: @item, url: admin_items_path do |f| %>
            <h4>商品画像</h4>
                <%= f.file_field :image, accept: "image/*" %>
            <h4>商品名</h4>
                <%= f.text_field :name %>
            <h4>商品説明</h4>    
                <%= f.text_area :introduction %>
            <h6>ジャンル</h6>
                <%=f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "--選択してください--") %>
            <h4>税抜価格</h4>
                <%= f.text_field :price %>円
            <h6>販売ステータス</h6>    
                <%= f.radio_button :is_active, "true" %>
                <%= f.label :is_active, "販売中" %>
                
                <%= f.radio_button :is_active, "false" %>
                <%= f.label :is_active, "販売停止中" %>
                
            <%= f.submit '新規投稿', class: "btn btn-success" %>
        <% end %>
    </div>
</div>    
