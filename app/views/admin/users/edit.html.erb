<div class="h3 m-5 col-3 bg-info text-black text-center">
<%= @user.last_name %><%= @user.first_name %>さんの会員情報編集
</div>
<p>会員ID <%= @user.id %></p>
<%= form_with model: @user, url: admin_customer_path(@user.id), url: admin_customer_path, method: :patch do |f| %>
    <p>氏名 : <%= f.text_field :last_name %><%= f.text_field :first_name %></p>
    <p>フリガナ : <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></p>
    <p>郵便番号 : <%= f.text_field :postal_code %></p>
    <p>住所 : <%= f.text_field :address %></p>
    <p>電話番号 : <%= f.text_field :telephone_number %></p>
    <p>メールアドレス : <%= f.text_field :email %></p>
    <p>会員ステータス : <%= f.radio_button :is_active, "true" %>
                        <%= f.label :is_active, "有効" %>
        
                        <%= f.radio_button :is_active, "false" %>
                        <%= f.label :is_active, "退会" %>
    </p>
            
                <%= f.submit "変更を保存", class: "btn btn-success" %>
    
<% end %>            