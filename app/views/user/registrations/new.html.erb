<div class="h3 m-5 col-3 bg-info text-black text-center">
  新規会員登録
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <section id="infomation">
        <div class="container">
  
            <div class="row">
                <div class="col-md-10">
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">姓</div>
                        <div class="col-3 border-start border-dark"><%= f.text_field :last_name %></div>
                        <div class="col-3 border borderless bg-light">名</div>
                        <div class="col-3 border-start border-dark"><%= f.text_field :first_name %></div>               
                    </div>
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">セイ</div>
                        <div class="col-3 border-start border-dark"><%= f.text_field :last_name_kana %></div>
                        <div class="col-3 border borderless bg-light">メイ</div>
                        <div class="col-3 border-start border-dark"><%= f.text_field :first_name_kana %></div> 
                    </div>
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">メールアドレス</div>
                        <div class="col-6 border-start border-dark"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
                    </div>
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">郵便番号（ハイフンなし）</div>
                        <div class="col-6 border-start border-dark"><%= f.text_field :postal_code %></div>
                    </div>
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">住所</div>
                        <div class="col-6 border-start border-dark"><%= f.text_field :address %></div>
                    </div>
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">電話番号（ハイフンなし）</div>
                        <div class="col-6 border-start border-dark"><%= f.text_field :telephone_number %></div>
                    </div>                    
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">パスワード<em>(<%= @minimum_password_length %> 文字以上)</em></div>
                        <div class="col-6 border-start border-dark">
                          <% if @minimum_password_length %>
                          
                          <% end %>
                          <%= f.password_field :password, autocomplete: "new-password" %>
                        </div>
                    </div>                   
                    <div class="row justify-content-start">
                        <div class="col-3 border borderless bg-light">パスワード（確認用）</div>
                        <div class="col-6 border-start border-dark"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
                    </div>                                       
                </div>
            </div>
        </div>
            <div class="text-center">   
                <button type="submit" class="btn btn-info">新規登録する</button>
            </div>                  
    </section>


<% end %>

<%= render "devise/shared/links" %>
