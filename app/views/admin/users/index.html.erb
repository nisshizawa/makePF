<div class="h3 m-5 col-3 bg-info text-black text-center">
  会員一覧
</div>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        
        <% @users.each do |user| %>
        <tr>
            <td><%= user.id %> </td>
            <td>
                <%= link_to admin_user_path(user.id) do %>
                    <%= user.last_name %><%= user.first_name %>
                <% end %>    
            </td>
            <td><%= user.email %></td>
            <td>
                <% if user.is_active %> 
                    <p>有効</p>
                <% else %> 
                    <p>退会</p>
                <% end %> 
            </td>
        </tr>    
        <% end %>    
        
    </tbody>
</table>