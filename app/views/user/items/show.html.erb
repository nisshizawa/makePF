<div class="card md-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <%= image_tag @item.get_image %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
            
                <h5 class="card-title"><%= @item.name %></h5>
                <p class="card-text"><%= @item.introduction %></p>
                <p></p>
                <div class="row">
                    <h6 class="card-text">￥<%= @item.with_tax_price.to_s(:delimited) %></h6><p class="font-small">(税込)</p>
                </div>    
            <%= form_with model: Simulation.new do |f| %>    
                <p class="card-text">
                    <%= f.hidden_field :item_id, :value => @item.id %>
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit "カートに入れる", class: "btn btn-success" %>
                </p>
           <% end %>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>コメント件数</th>
                    <th><%= @item.item_comments.count %></th>
                    <th colspan="1"></th>
                    <th colspan="1"></th>
                </tr>
            </thead>
            <tbody>
                <% @item.item_comments.each do |item_comment| %>
                <tr>
                    <td><%= item_comment.user.name %></td>
                    <td><%= item_comment.created_at.strftime('%Y/%m/%d') %></td>
                    <td><%= item_comment.comment %></td>
                    <td>
                        <% if item_comment.user == current_user %>
                            <%= link_to "削除", item_item_comment_path(item_comment.item, item_comment), method: :delete %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div>
            <%= form_with model: [@item, @item_comment] do |f| %>
                <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
                <%= f.submit "送信する" %>
            <% end %>
        </div>
    </div>
</div>