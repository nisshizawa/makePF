<div class="h3 m-5 col-3 bg-info text-black text-center">
  ジャンル編集
</div>

<div class="container">
    <div class="row">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
          <h4>ジャンル名</h4>
          <%= f.text_field :name %>
          
          <%= f.submit '変更を保存', class: "btn btn-success" %>
          
      <% end %>    
    </div>
</div>    