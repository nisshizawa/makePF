<div class="h3 m-5 col-3 bg-info text-black text-center">
  ジャンル一覧・追加
</div>

<div class="container">
    <div class="row">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
            <div class="field">
                <div>ジャンル名</div>
                <%= f.text_field :name %>
            </div>
            
            <div class="actions"><%= f.submit '新規登録', class: "btn btn-success" %></div>
        <% end %>    
    </div>    

    <div class="row text-start">
        <table class="table table-hover table-inverse">
            <thead class="table-secondary">
                <tr>
                    <th>ジャンル</th>
                    <th colspan="1"></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <td>    
                        <%= link_to edit_admin_genre_path(genre.id) do %>
                            <div class="btn btn-sm btn-success">編集する</div>
                        <% end %>    
                    </td>    
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>    