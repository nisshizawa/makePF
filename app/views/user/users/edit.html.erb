<div class="h3 m-5 col-3 bg-info text-black text-center">
  会員情報編集
</div>

<div class="container">
  <%= form_with model: @user, url: update_path, method: :patch do |f| %>
    <div class="my-3 row justify-content-start">
      <div class="col-2">氏名</div>
      <div class="col-3 rounded">
        <%= f.text_field :last_name %>
      </div>
      <div class="col-3 rounded">
        <%= f.text_field :first_name %>
      </div>
    </div>  
    
    <div class="my-3 row justify-content-start">
      <div class="col-2">フリガナ</div>
      <div class="col-3 rounded">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-3 rounded">
        <%= f.text_field :first_name_kana %>
      </div>  
    </div>
    
    <div class="my-3 row justify-content-start">
      <div class="col-2">郵便番号</div>
      <div class="col-3 rounded">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    
    <div class="my-3 row justify-content-start">
      <div class="col-2">住所</div>
      <div class="col-9 rounded">
        <%= f.text_field :address %>
      </div>
    </div>
  
    <div class="my-3 row justify-content-start">
      <div class="col-2">電話番号</div>
      <div class="col-3 rounded">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
    
    <div class="my-3 row justify-content-start">
      <div class="col-2">メールアドレス</div>
      <div class="col-3 rounded">
        <%= f.text_field :email %>
      </div>
    </div>
   
  <div class="row">
    <div class="col-2">
      <input class="btn btn-success" type="submit" value="変更内容を保存">
    </div> 
    
     
    <div class="col-10">
      <%= link_to confirm_path do %>
        <div class="btn btn-sm btn-danger">退会する</div>
      <% end %>
    </div>
  </div>  
  <% end %>  
</div>