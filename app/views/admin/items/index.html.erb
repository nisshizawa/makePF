<div class="h3 m-5 col-3 bg-info text-black text-center">
  商品一覧
</div>

    <div class="text-end">
        <%= link_to new_admin_item_path do %>
            <div class="nav-link text-black">
                <i class="fas fa-pencil-alt"></i>
            </div>
        <% end %>
    </div>        
<div class="container">
    <div class="row">
        <table class="table table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td>
                        <%= link_to admin_item_path(item.id) do %>
                            <%= item.name %>
                        <% end %>    
                    </td>
                    <td><%= item.price %></td>
                    <td><%= item.genre.name %></td>
                    <td>
                        <% if item.is_active %>
                            <p>販売中</p>
                        <% else %>
                            <p>販売停止中</p>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>    
</div>        
